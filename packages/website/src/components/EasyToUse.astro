---
import sprinkle from "../images/Sprinkle.svg";
import LinkButton from "./LinkButton.astro";

export interface Props {
  provider: string;
  clientComponent: string;
}

const { provider, clientComponent } = Astro.props;

const codeClass =
  "leading-relaxed h-full block text-slate-100 bg-slate-800 p-4 rounded-lg border border-slate-700 text-xs overflow-x-scroll md:overflow-hidden";

const preClass = "h-[280px] overflow-hidden";
---

<section
  class="bg-slate-900 py-20 md:py-40"
  style={{
    backgroundImage: `url("${sprinkle}")`,
  }}
>
  <div class="px-4 md:px-8 max-w-6xl mx-auto">
    <h2
      class="font-extrabold text-4xl md:text-5xl pb-4 md:text-center text-white"
    >
      With just a few lines of code
    </h2>

    <p class="text-2xl leading-relaxed md:text-center text-white pb-8">
      Check the following example using the React SDK with real-time updates.
    </p>

    <div class="grid md:grid-cols-2 gap-2 md:gap-8 items-center">
      <pre
        class={preClass}>
            <code set:html={provider} class={`${codeClass}`} />
          </pre>

      <pre
        class={preClass}>
            <code set:html={clientComponent} class={`${codeClass}`} />
          </pre>
    </div>

    <div class="text-center pt-12">
      <LinkButton
        href="https://docs.progressively.app/sdks/react"
        target="_blank"
        variant="secondary-inverse"
      >
        Get started with React SDK
      </LinkButton>
    </div>
  </div>
</section>
